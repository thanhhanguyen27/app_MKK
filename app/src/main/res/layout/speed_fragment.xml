    xmlns:tools="http://schemas.android.com/tools">
<LinearLayout
    android:id="@+id/lnMain"
    android:background="@color/backgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
  >

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundColor"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="4dp">



            <TextView
                android:layout_marginLeft="16sp"
                android:id="@+id/tvSpeedDomes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:gravity="left|center"
                android:text="Tốc độ phun hóa chất:"
                android:textColor="@color/text_gray"
                android:textSize="14dp" />

    </LinearLayout>
    <LinearLayout
        android:paddingBottom="10sp"
        android:paddingTop="10sp"
        android:background="?attr/backgroundLight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <TextView
            android:id="@+id/tvSpeedSpray"
            android:layout_marginLeft="16sp"
            android:layout_width="0dp"
            android:gravity="end"
            android:text="0"
            android:textSize="16sp"
            android:layout_weight="0.65"
            android:textColor="?attr/Text_head"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="0dp"
            android:gravity="start"
            android:text="ml/phút"
            android:layout_marginLeft="2dp"
            android:textSize="16sp"
            android:layout_weight="0.65"
            android:textColor="?attr/Text_head"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btEditSpeedSpray"
            style="?attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25sp"
            android:layout_marginRight="16sp"
            android:layout_weight="0.7"
            android:text="Thiết lập"
            android:textAllCaps="false"
            android:textSize="14sp" />

    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:paddingBottom="10sp"
        android:background="?attr/backgroundLight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tvWarningEdit"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/ora"
        android:text="Chỉnh sửa tốc độ phun từ 30-37 ml/phút"/>
    </LinearLayout>


